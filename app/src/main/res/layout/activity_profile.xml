<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <LinearLayout
            android:id="@+id/siguped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhóm 8"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:id="@+id/username"
                    android:layout_below="@+id/pr_image"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/pr_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"></ListView>

                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_below="@+id/listView"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"></ListView>
            </RelativeLayout>

        </LinearLayout>
        <Button
            android:textColor="#ED3E3E"
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/siguped"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button"
            android:text="Đăng xuất" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:backgroundTint="#fff"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_menu"
        app:itemIconTint="@color/color_tab"
        app:itemTextColor="@color/color_tab"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/chuadangnhap"
        android:layout_centerInParent="true"
        android:text="Vui lòng đăng nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
